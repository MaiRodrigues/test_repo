name: Auto Approve Trusted Users

on:
  pull_request_target:
    types: [opened, reopened, synchronize]

jobs:
  auto-approve:
    runs-on: ubuntu-latest
    permissions:
      pull-requests: write  # Required to approve PRs
    steps:
      - name: Auto Approve PR
        if: |
          contains(fromJson('["user1", "user2", "user3"]'), github.actor)
        uses: hmarr/auto-approve-action@v4
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}  # Or a PAT for a specific user
          review-message: "âœ… Auto-approved!"
